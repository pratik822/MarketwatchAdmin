<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="right"
        android:paddingLeft="8dp"
        android:translationZ="90dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/share" />

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        android:foreground="?android:selectableItemBackground"
        android:clickable="true"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingHorizontal="2dp"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_stockname"
                    android:layout_weight="0.65"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ff4b5cbe"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_posteddate"
                    android:layout_weight="0.35"
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:text="fsffdfdf"
                    android:layout_height="wrap_content"
                    android:textColor="#ffa9a9a9"
                    android:textSize="10sp"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_buyprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tv_stoploss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="13sp"
                    android:textStyle="bold"


                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_height="1sp"
                />



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3.0">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="Target 1"
                        android:padding="2dp"
                        android:gravity="center"
                        android:background="#ff448aff"
                        android:textColor="#ffffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_target_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6.0dip"
                        android:layout_margin="8dp"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:textColor="#ff000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="#33616161" />

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="Target 2"
                        android:padding="2dp"
                        android:gravity="center"
                        android:background="#ff4b5cbe"
                        android:textColor="#ffffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_target_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6.0dip"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:layout_weight="1.0"
                        android:textColor="#ff000000"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="#33616161" />

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="Target 3"
                        android:textColor="#ffffffff"
                        android:background="#ff448aff"
                        android:padding="2dp"
                        android:gravity="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_target_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6.0dip"
                        android:layout_margin="8dp"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#ff000000"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_call"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="12sp"
                    android:background="@android:color/holo_green_dark"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@android:color/white" />



            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>

</layout>


